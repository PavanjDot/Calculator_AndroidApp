<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:background="#25CCF7">
    <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtCalculations" android:textColor="#2C3335"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="30dp"
              android:id="@+id/edtNumber" android:editable="true" android:gravity="right" android:text="0"
              android:textSize="30sp" android:inputType="number" android:textColor="#2C3335"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="286dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="2pt">
            <Button
                    android:text="Button"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/button" android:visibility="invisible"
                    android:layout_weight="1" android:background="@android:color/black"
                    android:layout_marginRight="2pt" android:onClick="buttonTapped"/>
            <Button
                    android:text="Button"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/button2" android:visibility="invisible"
                    android:layout_weight="1" android:background="@android:color/black"
                    android:layout_marginRight="2pt" android:onClick="buttonTapped"/>
            <Button
                    android:text="Button"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/button3" android:visibility="invisible"
                    android:layout_weight="1" android:background="@android:color/black"
                    android:layout_marginRight="2pt" android:onClick="buttonTapped"/>
            <Button
                    android:text="/"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btnDivide" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt"
                    android:textColor="@android:color/holo_purple" android:textSize="30sp"
                    android:onClick="buttonTapped"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="2pt">
            <Button
                    android:text="7"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn7" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt"
                    android:textColor="@android:color/holo_purple" android:textSize="30sp"
                    android:onClick="buttonTapped"/>
            <Button
                    android:text="8"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn8" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="9"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn9" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt"
                    android:textColor="@android:color/holo_purple" android:textSize="30sp"
                    android:onClick="buttonTapped"/>
            <Button
                    android:text="X"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btnMultiply" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="2pt">
            <Button
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn4" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn5" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="6"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn6" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt"
                    android:textSize="30sp" android:textColor="@android:color/holo_purple"
                    android:onClick="buttonTapped"/>
            <Button
                    android:text="-"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btnSubstraction" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="2pt">
            <Button
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn1" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="2"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn2" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btn3" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                    android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
            <Button
                    android:text="+"
                    android:layout_width="0dp"
                    android:layout_height="30pt" android:id="@+id/btnPlus" android:layout_weight="1"
                    android:background="@android:color/black" android:layout_marginRight="2pt"
                    android:textColor="@android:color/holo_purple" android:textSize="30sp"
                    android:onClick="buttonTapped"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="2pt">
        <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="30pt" android:id="@+id/btn0" android:layout_weight="1"
                android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                android:textColor="@android:color/holo_purple" android:onClick="buttonTapped"/>
        <Button
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="30pt" android:id="@+id/btnClear" android:layout_weight="1"
                android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                android:textColor="@android:color/holo_red_light" android:onClick="buttonTapped"/>
        <Button
                android:text="%"
                android:layout_width="0dp"
                android:layout_height="30pt" android:id="@+id/btnPercent" android:layout_weight="1"
                android:background="@android:color/black" android:layout_marginRight="2pt" android:textSize="30sp"
                android:textColor="@android:color/holo_red_light" android:onClick="buttonTapped"/>
        <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="30pt" android:id="@+id/btnEqual" android:layout_weight="1"
                android:background="@android:color/black" android:layout_marginRight="2pt"
                android:textColor="@android:color/holo_purple" android:textSize="30sp" android:onClick="buttonTapped"/>
    </LinearLayout>

</LinearLayout>